# ESG Scoring Platform - Environment Variables
# Copy this file to .env and fill in the values

# Database (SQLite for local, PostgreSQL for production)
DATABASE_URL=
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/esg_platform

# JWT Authentication
SECRET_KEY=
ALGORITHM=
ACCESS_TOKEN_EXPIRE_MINUTES=

# Gemini API for NLP
GEMINI_API_KEY=

# Redis (optional, for caching)
REDIS_URL=

# CORS
FRONTEND_URL=

# App Settings
DEBUG=true
LOG_LEVEL=
